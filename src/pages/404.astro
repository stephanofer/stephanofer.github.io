---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SectionContainer from "@/components/SectionContainer.astro";
---

<BaseLayout
  title="Página no encontrada"
  description="No se encontro esta página"
>
  <main>
    <SectionContainer view="100dvh">
      <div class="error-section">
        <h1>404</h1>
        <h2>
          ¿Quizás buscabas la lista de <a href="/#proyectos">Proyectos</a> anteriores
          o la <a href="/">Página principal</a>?
        </h2>
      </div>
    </SectionContainer>
  </main>
</BaseLayout>

<style>
  .error-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  h1 {
    font-size: 10rem;
    @media (width > 640px) {
      font-size: 20rem;
    }
  }

  :global([data-theme="dark"]) h1 {
    color: rgb(65, 65, 65);
    /* color: red; */
  }

  h2 {
    color: var(--foreground);
    font-size: var(--fs-base);
    text-align: center;
    @media (width > 640px) {
    font-size: var(--fs-md);

    }
  }

  :global([data-theme="dark"]) h2 {
    color: var(--color-text-dark);
  }

  a{
    color: var(--resalt);
  }
</style>
